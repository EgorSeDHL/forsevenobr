<Window x:Class="FoodDelivery.amountItemWibdow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDelivery"
        mc:Ignorable="d"
        Title="amountItemWibdow" Height="150" Width="300"  ResizeMode="CanResizeWithGrip">
    <Grid>
        <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" FontSize="20" Text="Введите количество товара" VerticalAlignment="Top"/>
        <TextBox x:Name="countBX" HorizontalAlignment="Stretch" PreviewTextInput="TextBox_PreviewTextInput" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
        <Button Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
