<Window x:Class="FoodDelivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDelivery"
        mc:Ignorable="d"
        Title="Регистрация" Height="420" Width="320">
    <Grid Background="#0a1128">
        <StackPanel>
            <TextBlock Text="Имя пользователя" HorizontalAlignment="Center"/>
            <TextBox Name="UsernameTextBox"  />
            <TextBlock Text="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox Name="PasswordBox"/>
            <TextBlock Text="Email" HorizontalAlignment="Center"/>
            <TextBox Name="EmailTextBox"/>
            <TextBlock Text="Телефон" HorizontalAlignment="Center"/>
            <TextBox Name="PhoneTextBox"/>
            <TextBlock Text="Адрес" HorizontalAlignment="Center"/>
            <TextBox  Name="AddresTextBox"/>
            <Button Content="Зарегистрироваться" Margin="0,5,0,0" Click="RegisterButton_Click"/>
            <Button x:Name="LogiButton" Margin="0,5" Content="Уже есть аккаунт? Войдите!" Click="LogiButton_Click"/>
            
        </StackPanel>

    </Grid>
</Window>
