<Window x:Class="FoodDelivery.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDelivery"
        mc:Ignorable="d"
        Title="Авторизация" Height="290" Width="300">
    <StackPanel Background="#0a1128">
        <TextBlock Text="Имя пользователя" Margin="10"  HorizontalAlignment="Center"/>
        <TextBox Name="UsernameTextBox" Margin="10,0"/>
        <TextBlock Text="Пароль" Margin="10" HorizontalAlignment="Center"/>
        <PasswordBox Name="PasswordBox" Margin="10,0" />
        <Button x:Name="EnterBtn" 
                Content="Войти" 
                Click="EnterBtn_Click" 
                Margin="10,10,10,5" />
        <Button x:Name="BackBtn" 
                Content="Назад" 
                Margin="10,5" Click="BackBtn_Click" />
    </StackPanel>
</Window>
