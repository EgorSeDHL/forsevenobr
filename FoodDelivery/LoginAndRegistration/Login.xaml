<Window x:Class="FoodDelivery.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDelivery"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300">
    <StackPanel Background="#0a1128">
        <TextBlock Text="Имя пользователя"  HorizontalAlignment="Center"/>
        <TextBox Name="UsernameTextBox" />
        <TextBlock Text="Пароль"  HorizontalAlignment="Center"/>
        <PasswordBox Name="PasswordBox" />
        <Button x:Name="EnterBtn" Content="Войти" Click="EnterBtn_Click" Margin="0,5" />
    </StackPanel>
</Window>
