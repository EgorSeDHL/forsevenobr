<Window x:Class="FoodDelivery.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodDelivery"
        mc:Ignorable="d"
        Title="UserWindow" Height="500" Width="800">
    <Grid Margin="10">
        <!-- Определяем строки и колонки для адаптивности -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для заголовков -->
            <RowDefinition Height="*"/>
            <!-- Для списков и полей -->
            <RowDefinition Height="Auto"/>
            <!-- Для кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Основная колонка -->
            <ColumnDefinition Width="1*"/>
            <!-- Боковая колонка для отзывов и доп. информации -->
        </Grid.ColumnDefinitions>

        <!-- Основная часть формы (выбор ресторана, продуктов и т.д.) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <!-- Выбор ресторана -->
            <TextBlock x:Name="HelloUserBX" Text="Выберите ресторан" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Выберите ресторан" FontSize="16" Margin="0,0,0,10"/>
            <ComboBox x:Name="RestaurantComboBox" Height="30" VerticalAlignment="Top" SelectionChanged="RestaurantComboBox_SelectionChanged" HorizontalAlignment="Stretch"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <!-- Выбор продуктов -->
            <TextBlock Text="Выберите продукты" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="ProductListBox" Height="100" SelectionMode="Multiple" HorizontalAlignment="Stretch" SelectionChanged="ProductListBox_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}"/>

            <!-- Адрес доставки -->
            <TextBlock Text="Введите адрес доставки" FontSize="16" Margin="0,20,0,10"/>
            <TextBox x:Name="AddressTextBox" Height="30" HorizontalAlignment="Stretch"/>

            <!-- Способ оплаты -->
            <TextBlock Text="Выберите способ оплаты" FontSize="16" Margin="0,20,0,10"/>
            <ComboBox x:Name="PaymentMethodComboBox" Height="30" HorizontalAlignment="Stretch">
                <ComboBoxItem Content="Кредитная карта"/>
                <ComboBoxItem Content="Наличные"/>
                <ComboBoxItem Content="Apple Pay"/>
            </ComboBox>
        </StackPanel>

        <!-- Боковая колонка, можно использовать для отображения общей суммы, отзывов или прочей информации -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Дополнительная информация" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="additionalInformationTBlock" />
        </StackPanel>

        <!-- Кнопка подтверждения заказа -->
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Подтвердить заказ" Height="40"
                HorizontalAlignment="Stretch" Margin="10"
                Click="SubmitOrder_Click"/>
    </Grid>
</Window>
